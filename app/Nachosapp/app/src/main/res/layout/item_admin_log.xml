<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="16dp"
    app:cardUseCompatPadding="false"
    app:cardElevation="0dp"
    app:strokeWidth="0dp"
    app:strokeColor="@android:color/transparent"
    app:cardBackgroundColor="@android:color/white"
    android:clickable="false"
    android:focusable="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_log_event_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event name"
            android:textStyle="bold"
            android:textSize="17sp"
            android:textColor="#000000"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/tv_log_recipient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="To: Recipient Name"
            android:textSize="13sp"
            android:textColor="#000000"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/tv_log_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notification message content"
            android:textSize="15sp"
            android:textColor="#000000"
            android:layout_marginTop="4dp"
            android:maxLines="3"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/tv_log_sender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sender: Organizer name"
            android:textSize="13sp"
            android:textColor="#000000"
            android:layout_marginTop="6dp" />

        <TextView
            android:id="@+id/tv_log_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="11/30/25 6:19 PM"
            android:textSize="12sp"
            android:textColor="#000000"
            android:layout_marginTop="2dp" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
