<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/notificationCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    android:layout_marginHorizontal="8dp"
    app:cardCornerRadius="14dp"
    app:cardUseCompatPadding="true"
    app:strokeWidth="1dp"
    app:strokeColor="@android:color/darker_gray"
    android:foreground="?attr/selectableItemBackground"
    android:padding="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- thin accent bar that we tint from the adapter -->
        <View
            android:id="@+id/accentStrip"
            android:layout_width="4dp"
            android:layout_height="0dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageButton
            android:id="@+id/btnDelete"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@android:drawable/ic_menu_delete"
            android:tint="@android:color/darker_gray"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/delete_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvNotificationStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Invited!"
            android:textStyle="bold"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@id/accentStrip"
            app:layout_constraintEnd_toStartOf="@id/btnDelete"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="12dp"/>

        <TextView
            android:id="@+id/tvNotificationMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Notification message"
            android:textSize="16sp"
            android:ellipsize="end"
            android:maxLines="3"
            app:layout_constraintStart_toStartOf="@id/tvNotificationStatus"
            app:layout_constraintEnd_toEndOf="@id/tvNotificationStatus"
            app:layout_constraintTop_toBottomOf="@id/tvNotificationStatus"
            app:layout_constraintBottom_toTopOf="@id/tvNotificationTime"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/tvNotificationTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nov 5, 2025 5:30 PM"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            app:layout_constraintStart_toStartOf="@id/tvNotificationStatus"
            app:layout_constraintTop_toBottomOf="@id/tvNotificationMessage"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <Button
            android:id="@+id/btnViewQueue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/queueBtn"
            android:visibility="gone"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvNotificationMessage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
