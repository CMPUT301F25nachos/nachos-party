<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/eventDetailsLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="?android:attr/windowBackground">

    <!-- Scrollable event content -->
    <ScrollView
        android:id="@+id/contentScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="96dp"
        android:paddingHorizontal="24dp"
        android:paddingTop="16dp"
        android:paddingBottom="24dp"
        android:clipToPadding="false">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_events_details_card"
            android:padding="24dp"
            android:elevation="4dp"
            android:clipToOutline="true">

            <!-- Event banner -->
            <ImageView
                android:id="@+id/eventBannerImageView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:background="#E0E0E0"
                android:src="@drawable/ic_camera_placeholder" />

            <!-- Title -->
            <TextView
                android:id="@+id/eventTitleTextView"
                style="@style/TextAppearance.MaterialComponents.Headline6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textStyle="bold" />

            <!-- Date / Schedule -->
            <TextView
                android:id="@+id/eventDateTextView"
                style="@style/TextAppearance.MaterialComponents.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp" />

            <!-- Total spots -->
            <TextView
                android:id="@+id/eventSpotsTextView"
                style="@style/TextAppearance.MaterialComponents.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp" />

            <!-- Entrants -->
            <TextView
                android:id="@+id/eventEntrantsTextView"
                style="@style/TextAppearance.MaterialComponents.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp" />

            <!-- Registration period -->
            <TextView
                android:id="@+id/eventDrawPeriodTextView"
                style="@style/TextAppearance.MaterialComponents.Body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textColor="?android:attr/textColorSecondary" />

            <!-- Description -->
            <TextView
                android:id="@+id/eventDescriptionTextView"
                style="@style/TextAppearance.MaterialComponents.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textColor="?android:attr/textColorPrimary" />
        </LinearLayout>
    </ScrollView>

    <!-- Fixed bottom button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/joinWaitlistButton"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="bottom"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="24dp"
        android:textAllCaps="false"
        app:cornerRadius="28dp"
        app:iconGravity="textStart"
        app:iconPadding="8dp"
        app:rippleColor="?attr/colorControlHighlight" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
